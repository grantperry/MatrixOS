#!/bin/bash
echo "Matrix Build tools loaded..."
M_HOME=~/MatrixOS

cd $M_HOME

export PATH="$HOME/opt/cross/bin:$PATH"

alias push="cd src;
		rm *.o;
		cd ..;
		git push MatrixOS master;"
alias commit="git checkout *.o;
				git commit;"
alias add="git add "
alias pre_commit="cd $M_HOME/src;"
alias master="git checkout master"
alias pages="git checkout gh-pages"

alias matrix="cd $M_HOME
			  . ./.matrix"
alias run="qemu-system-i386 -monitor stdio -cdrom  $M_HOME/MatrixOS.iso"
alias kern="qemu-system-i386 -monitor stdio -kernel"
alias build="sh $M_HOME/kernel.sh"
alias bld="build; run"
alias release="cd $M_HOME/src;
				make release;"

